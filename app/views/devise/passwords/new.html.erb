<h2><%= t('.forgot_your_password') %></h2>
<div class="row">
  <div class="col-md-6 buffer-top">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions buffer-top">
    <%= f.submit t('.send_me_reset_password_instructions') %>
  </div>
<% end %>

    <%= link_to "Войти", new_session_path(resource_name) %><br/>

    <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br/>
  </div>
</div>
