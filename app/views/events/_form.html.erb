<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label t('activerecord.attributes.event.title') %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t('activerecord.attributes.event.address') %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t('activerecord.attributes.event.datetime') %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label t('activerecord.attributes.event.description') %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.shared.links.create'), class: 'btn btn-primary' %>
     <%= link_to t('devise.shared.links.back'), :back, class: 'btn btn-secondary' %>
  </div>
<% end %>
